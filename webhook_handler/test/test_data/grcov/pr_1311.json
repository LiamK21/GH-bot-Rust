    "title": "Eliminate performance penalty of `--source-dir`",
    "user": {
      "login": "pietroalbini",
      "id": 2299951,
      "node_id": "MDQ6VXNlcjIyOTk5NTE=",
      "avatar_url": "https://avatars.githubusercontent.com/u/2299951?v=4",
      "gravatar_id": "",
      "url": "https://api.github.com/users/pietroalbini",
